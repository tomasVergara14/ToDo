<%- include('./partials/head.ejs')%>
  <body>
    <div class="container">
      <div class="row">
        <div class="col d-col w-100">
          <div>
            <form action="/tasks" method="POST">
              <input type="text" class="form-control" name="title" id="title">
              <button class="btn btn-primary">Enviar</button>
            </form>
          </div>
          <div class="alert">
            <p class="invalid-text">El texto debe contener al menos 3 caracteres</p>
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <div class="list-group">
            <%list.forEach((item)=>{%>
            <div class="list-group-item">
              <a href="/tasks/detail/<%=item.id%>">
                <%=item.title%>
              </a>
            </div>
            <%})%>
          </div>
        </div>
      </div>
    </div>    
  </body>
</html>